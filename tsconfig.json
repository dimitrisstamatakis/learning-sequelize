{
    "compilerOptions": {
        /* Modern JavaScript */
        "target": "ES2022",
        "lib": ["ES2022"],

        /* ESM + Node.js */
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "moduleDetection": "force",

        /* Type Support */
        "types": ["node"],

        /* Interop */
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        /* Strictness */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* File Handling */
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "isolatedModules": true,

        /* Paths + Aliases (Optional but great for bigger projects) */
        "baseUrl": "./",
        "paths": {
            "@config/*": ["config/*"],
            "@controllers/*": ["controllers/*"],
            "@db/*": ["database/*"],
            "@middleware/*": ["middleware/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"],
            "@validation/*": ["validation/*"]
            // "@customTypes/*": ["customTypes/*"]
        },

        /* Output & Type Support */
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,

        /* Performance */
        "skipLibCheck": false,
        "skipDefaultLibCheck": false,

        /* Best Practices */
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./"],
    "exclude": ["node_modules", "dist"]
}
